{
    "manifest_version": 3,
    "name": "CopyTitle",
    "version": "1.0",
    "description": "Extension pour copier l'URL et le titre de la page active",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "512": "icons/icon512.png"
      }
    },
    "permissions": [
      "activeTab",
      "clipboardWrite",
      "scripting"
    ],
    "icons": {
      "512": "icons/icon512.png"
    }
  }